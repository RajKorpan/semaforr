	<!-- Flow -->
	<State name="leftDown" final="0" >
		<GoalSelector type="weighted" goal_set="0"/>
		<VelComponent type="nav_mesh" heading_threshold="15" file_name="openOffice.nav" />
	</State>	
	<State name="rightDown" final="0" >
